//
// This file is JSON5, which means you can have comments.
 
{
    // I think the less an end-user has to edit the HTML, the
    // easier it'll be for them.  This isn't intended for web developers, 
    // it's intended for Average Joe who just wants to throw up a map
    // of what's in the neighborhood.
    //
    // Set the page title (pretty meaningless, but a nice touch)
    Title: "Panicle Demo Page",
    // This is what shows on the page's navbar
    Logo:  "Panicle",
    // Center of the map.  Out default is Asuncion, Paraguay
    Center: [ -25.2878, -57.633],
    CenterMarker: {
        // Focus of this map
    },
    // These data files get loaded in and parsed to populate the map
    // For details on the options, see ./data/README.md
    Data: {
      Pizza: "data/pizza.json",
      Burgers: "data/burgers.json",
      SuperMarkets: "data/supers.json"
    },
    GeoJSON: {
      "Bus #38":  {
        style: {
          color: "#ff7800",
          weight: 4,
          opacity: 0.8,
        },
        file: "./data/bus_routes/Bus-38.json",
      },
      "Bus 2y7 (Botanico)":  {
        style: {
          color: "#000077",
          weight: 5,
          opacity: 0.7,
        },
        file: "./data/bus_routes/Bus-2y7.json",
      },
      "Bus 30 (delSol)":  {
        style: {
          color: "#0000ff",
          weight: 5,
          opacity: 0.7,
        },
        file: "./data/bus_routes/Bus-30.json",
      },
      //"Bus 5":  {
      //  style: {
      //    color: "#077000",
      //    weight: 5,
      //    opacity: 0.7,
      //  },
      //    file: "./data/bus_routes/Bus-5.json",
      //},
      "Bus 15 (Shopping Mariscal)":  {
        style: {
          color: "yellow",
          weight: 5,
          opacity: 0.7,
        },
        file: "./data/bus_routes/Bus-15-3.json",
      },
      "Bus 11 (Aregua)":  {
        style: {
          color: "#660066",
          weight: 5,
          opacity: 0.7,
        },
        file: "./data/bus_routes/Bus-11.json",
      },
    },
    // These become the items on the dropdown titled "Links" on the navbar
    Links: {
      // "What we display on the menu": {
      //     url: {url of the link},
      //     tooltip: {OPTIONAL: what shows up if you hover over the link}
      //}
      "Panicle on Github": {
        url: "https://github.com/almamigratoria-netizen/panicle",
        tooltip: "I'm a hoopy frood",
      },
      "Example.com": {
        url: "https://www.example.com",
        tooltip: "I really know where my towel is",
      },
    }
}
